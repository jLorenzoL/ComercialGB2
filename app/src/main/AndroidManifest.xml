<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upc.gmt.comercialgb">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="MENÚ PRINCIPAL"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MantenimientoCalzadoActivity"
            android:label="MANTENIMIENTO DE CALZADO"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AgregarCalzadoActivity"
            android:label="AGREGAR CALZADO"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ModificarCalzadoActivity"
            android:label="MODIFICAR CALZADO"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EliminarCalzadoActivity"
            android:label="ELIMINAR CALZADO"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RegistrarPedidoActivity"
            android:label="REGISTRAR PEDIDO"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.upc.gmt.catalogo.CatalogoActivity"
            android:label="@string/app_mostrar_catalogo"
            android:parentActivityName=".MenuPrincipalActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".MantenimientoUsuarioActivity"
            android:label="MANTEMIENTO DE USUARIO"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AgregarUsuarioActivity"
            android:label="Registrar USUARIO"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.upc.gmt.catalogo.DetalleCalzadoActivity"
            android:label="Detalle Calzado"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.upc.gmt.pedido.PedidoActivity"
            android:label="MIS CALZADOS"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.upc.gmt.catalogo.FullScreenImageActivity"
            android:label="IMAGEN CALZADO"
            android:screenOrientation="landscape" />
        <activity android:name="com.upc.gmt.pedido.DatosPedidoActivity" />
        <activity
            android:name=".RecuperarClaveActivity"
            android:label="Recuperar Contraseña"
            android:screenOrientation="landscape"/>
    </application>

</manifest>