<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="editText_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
    </style>

    <style name="button_style">
    <item name="android:background">@drawable/button_background</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:textColor">#FDFDFE</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight">1</item>
    </style>

    <style name="button_styleCatalogo">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="textView_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#6f7a8b</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="textView_stylePedido">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#121213</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="spinner_style" >
    <item name="android:background">@drawable/spinner_bg</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="button_styleDatosPedido">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#FDFDFE</item>
    </style>

</resources>
