<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/grid_pedido_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_delete"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grid_pedido_label_nombre"
                style="@style/textView_stylePedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="left"
                android:text="Nombre" />

            <TextView
                android:id="@+id/grid_pedido_label_codigo"
                style="@style/textView_stylePedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="left"
                android:text="Codigo:" />

            <TextView
                android:id="@+id/grid_pedido_label_color"
                style="@style/textView_stylePedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="left"
                android:text="Color:" />

            <TextView
                android:id="@+id/grid_pedido_label_talla"
                style="@style/textView_stylePedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="left"
                android:text="Talla:" />

            <TextView
                android:id="@+id/grid_pedido_label_precio"
                style="@style/textView_stylePedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="left"
                android:text="Precio:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnQuitar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginLeft="75dp"
                android:onClick="onQuitarPedido"
                app:srcCompat="@android:drawable/ic_delete" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cantidad:" />

                <EditText
                    android:id="@+id/txtCantidadPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:hint="CANTIDAD"
                    android:inputType="number"
                    android:text="1"
                    android:textAlignment="gravity" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTotalArticulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="S/ " />

            <CheckBox
                android:id="@+id/chbArticulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="1"
                android:scaleY="2"
                android:text="CONFIRMAR" />

        </LinearLayout>

        <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    </LinearLayout>-->
    </LinearLayout>
</LinearLayout>